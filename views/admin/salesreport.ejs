<!-- salesReport.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sales Report</title>
    <style>
      body {
        font-family: "Helvetica", sans-serif;
      }
      .title {
        font-size: 16px;
        text-align: center;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
      }
      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
        font-size: smaller;
      }
    </style>
  </head>
  <body>
    <div class="title">Sales Report (<%= startDate %> to <%= endDate %>)</div>
    <table>
      <tr>
        <th>S.No</th>
        <th>orders ID</th>
        <th>Customer</th>
        <th>orders Date</th>
        <th>Product</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
      <!-- <script>
        console.log('orderssorderss',orderss);
      </script> -->
      <% let totalordersPrice = 0; %>
      <% orders.forEach((orders, index )=> { %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= orders._id %></td>
        <td>
          <%= orders.address ? orders.address[0].name : 'Unknown Customer' %>
        </td>
        <td><%= orders.orderDate.toISOString().substring(0, 10) %></td>
        <td>
          <% orders.items.forEach(item => { %> <%= item ?
          item.name : 'Unknown Product' %><br /><br><br>
          <% }); %>
        </td>
        <td>
          <% orders.items.forEach(item => { %>
             <%= item.quantity %><br /><br><br>
          <% }); %>
        </td>
        <td>₹<%= orders.totalPrice %>/-</td>
      </tr>
      <% totalordersPrice += orders.totalPrice; %>

      <% }); %>
      <tr>
        <td colspan="6" style="text-align: right;"><strong>Total orders Price:</strong></td>
        <td><strong>₹<%= totalordersPrice %>/-</strong></td>
    </tr>
    </table>
  </body>
</html>
