<%-include('./adminPartials/sidebar')%> 
        



<div class="container my-5">
    <div>
        <h3 class="mb-5 fw-bold">Offer Management</h3>

        <!-- Add a div for the pop-up message -->
        <p id="popup-message" class="popup-message text-danger"></p>

        <% if (productsData) { %>
            <div>
                <div class="table-responsive rounded-3">
                    <table id="usersTable" class="table table-striped table-bordered">
                        <thead>
                            <tr class="bg-dark text-white">
                                <th>No</th>
                                <th>image</th>
                                <th>Product name</th>
                                <th>Discount in %</th>
                                <th>Start date</th>
                                <th>Expiry date</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% productsData.forEach((data, index) => { %>
                                
                                <tr>
                                    <td><%= ++index %></td>
                                    <td><img width="60px" height="60px" class="img-fluid" src="/productImages/<%= data.images[0] %>" alt="categoryImage"></td>
                                    <td><%= data.name %></td>
                                    <td><input type="number" class="discount-input" min="0" max="99" placeholder="0" data-index="<%= index %>"></td>
                                    <td><input type="date" class="start-date-input" data-index="<%= index %>"></td>
                                    <td><input type="date" class="end-date-input" data-index="<%= index %>"></td>
                                    <td class="text-center" style="width: 10rem;">
                                        <button type="button" class="btn btn-success text-center update-btn" data-index="<%= index %>" data-product-id="<%= data._id %>">Update</button>
                                        <a href="" class="btn delete-btn" data-index="<%= index %>" data-product-id="<%= data._id %>"><i class="bi bi-trash"></i></a>
                                    </td>
                                </tr>
                             
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        <% } %>
    </div>
</div>






<style>
    h3, button, table{
        font-family: "Inter", sans-serif;
    }
    thead tr{
        height: 50px;
    }
    td{
        vertical-align: middle !important;
    }
    .bi-trash{
        font-size: 22px;
        color: #000;
    }
</style>




<!-- data table link -->
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap4.min.js"></script>

<script>
    jQuery.noConflict();
    jQuery(document).ready(function($) {
        $('#usersTable').DataTable();
    });
</script>



<script>
    document.addEventListener('DOMContentLoaded', function () {

        const updateButtons = document.querySelectorAll('.update-btn');
        const deleteButtons = document.querySelectorAll('.delete-btn');

        updateButtons.forEach(button => {
            button.addEventListener('click', function () {

                const index = this.getAttribute('data-index');
                const discountInput = document.querySelector(`.discount-input[data-index="${index}"]`);
                const productId = this.getAttribute('data-product-id');
                const startDateInput = document.querySelector(`.start-date-input[data-index="${index}"]`);
                const endDateInput = document.querySelector(`.end-date-input[data-index="${index}"]`);
                
                const discountValue = parseInt(discountInput.value);
                const startDateValue = startDateInput.value;
                const endDateValue = endDateInput.value;

                if (discountValue === '' || startDateValue === '' || endDateValue === '') {
                    document.getElementById('popup-message').innerHTML = 'Fields value connot be empty';
                    return;
                } else if (discountValue > 100) {
                    document.getElementById('popup-message').innerHTML = 'Discount value cannot be greater than 100%';
                    return;
                } else if (discountValue < 1) {
                    document.getElementById('popup-message').innerHTML = 'Discount value cannot be lessthan than 1%';
                    return;
                }

                const data = {
                    discount: discountValue,
                    startDate: startDateValue,
                    endDate: endDateValue,
                    productId: productId
                }

                fetch('/admin/create-offer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('popup-message').innerText = data.message;
                    setTimeout(() => {
                        window.location.reload()
                    }, 3000);
                } else {
                    document.getElementById('popup-message').innerText = data.message;
                }
            })
            .catch(error => {
                document.getElementById('popup-message').innerText = 'Error updating offer';
                console.error('Error:', error);
            });
            })
        });


        // Add event listener for delete buttons
    deleteButtons.forEach(button => {
      button.addEventListener('click', function() {

        // const index = this.getAttribute('data-index');
        const productId = this.getAttribute('data-product-id');
        console.log(productId,'pppppppppppppiiiiiiiiiiii');

        fetch(`/admin/delete-offer/${productId}`, {
          method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            document.getElementById('popup-message').innerText = 'Offer deleted successfully';
            setTimeout(() => {
              window.location.reload();
            }, 2000);
          } else {
            document.getElementById('popup-message').innerText = data.message || 'Error deleting offer';
          }
        })
        .catch(error => {
          document.getElementById('popup-message').innerText = 'Error deleting offer';
          console.error('Error:', error);
        });
      });
    });


    })
</script>











