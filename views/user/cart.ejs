                                      <button id="minusBtn" class="btn btn-primary px-3 ms-2" onclick="updateQuantity('<%= data._id %>', '<%= data.product._id %>', 1, 'increase')">
                                          <i class="fas fa-plus"></i>
                                      </button>
                                  </div>
                                    <!-- Quantity -->

                                    <!-- Price -->
                                    <p class="text-start text-md-center">
                                        <strong>MRP: <%= eachProductPrice[i].total %><span>&#8377</span></strong>
                                    </p>
                                    <!-- Price -->
                                </div>
                              </div>
                              <hr class="my-4" />
                          <% }) %>
                          <!-- Single item -->
                      </div>
                  </div>
                  <div class="card mb-4">
                    <div class="card-body">
                      <p><strong>Expected shipping delivery</strong></p>
                      <p class="mb-0" id="expected-date"></p>
                    </div>
                  </div>
