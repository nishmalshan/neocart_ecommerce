                    <div class="card-header py-3">
                      <h5 class="mb-0 fw-bold">Shopping Cart</h5>
                    </div>
                      <div class="card-body">
                          <!-- Single item -->
                          <% cartData?.forEach((data, i) => { %>
                              <div class="row">
                                  <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                      <!-- Image -->
