                                    <!-- Quantity -->
                                    <div class="d-flex mb-4" style="max-width: 300px">
                                      <button id="plusBtn" class="btn btn-primary px-3 me-2" onclick="updateQuantity('<%= data._id %>', '<%= data.product._id %>', 1, 'decrease')">
                                          <i class="fas fa-minus"></i>
                                      </button>
