        <!-- Filter products -->
        <script>

           function applyFilter() {
            const priceLowToHigh = document.getElementById('priceLowToHigh').checked;
            const priceHighToLow = document.getElementById('priceLowToHigh').checked;
            const category = document.getElementById('categorySelect').value;
            const brand = document.getElementById('brandSelect').value;

            console.log(priceLowToHigh);
            console.log(priceHighToLow);
            console.log(category);
            console.log(brand);


            fetch('/filter-products', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ priceLowToHigh, priceHighToLow, category, brand })
            })
            .then(response => response.json())
            .then(response => {
                if(response.success){
                    displayFilteredProducts(response.data)
                }else{

                }
                
            })
            .catch(error => {
                console.error('Error applying filter:', error);
            })

           }


           function displayFilteredProducts(data) {
    console.log("Data received:", data);


    
    // Ensure the product container is selected correctly
    const productContainer = document.querySelector('.product-list .row');
    if (!productContainer) {
        console.error('Product container not found');
        return;
    }

    // Clear the current product listing
    productContainer.innerHTML = '';

    if(data.length==0){
        productContainer.innerHTML = `
        <div class="text-center">
            <h2>No products found</h2>
        </div>
        `
        return;
    }

    data.forEach(product => {
        const productDiv = document.createElement('div');
        productDiv.classList.add('all-products', 'best', 'col-lg-3', 'col-md-3', 'col-sm-6', 'px-3', 'mb-5');
        
        productDiv.innerHTML = `
            <div class="product position-relative">
                <a href="/productdetails/${product._id}">
                    <img src="/productImages/${product.images[0]}" class="image-fluid" height="250px" width="100%" alt="">
                    <div class="product-btn">
                        <p>${product.brand}</p>
                        <p class="text-truncate">${product.name}</p>
                        <p>${product.color}</p>
                        ${product.discountedPrice ? 
                            `<p>MRP: <span class="text-success">${product.discountedPrice}&#8377;</span> <span class="text-muted ms-2 text-decoration-line-through">${product.price}&#8377;</span></p>` :
                            `<p>MRP: ${product.price}<span>&#8377;</span></p>`
                        }
                    </div>
                </a>
            </div>
        `;
        productContainer.appendChild(productDiv);
    });
}

           function resetFilter() {
            console.log('rrrrrrrrrrrrrrrrrrrrrrrr');
            document.getElementById('priceLowToHigh').checked = false;
            document.getElementById('priceHighToLow').checked = false;
            document.getElementById('categorySelect').value = 'ALL';
            document.getElementById('brandSelect').value = 'ALL';
            window.location.reload();
           }


        </script>



        





















